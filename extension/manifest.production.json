{
  "version": "2.2.20",
  "name": "Omni",
  "manifest_version": 2,
  "description": "A lightweight Q&A tool that helps you document and find information faster.",
  "browser_action": {},
  "web_accessible_resources": ["public/*", "css/*"],
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },

  "__chrome|firefox__author": "Omni Knowledge, Inc.",
  "__opera__developer": {
    "name": "Omni Knowledge, Inc."
  },

  "background": {
    "scripts": ["/js/background.bundle.js"],
    "__chrome|opera__persistent": false
  },
  "__chrome|opera__externally_connectable": {
    "matches": ["https://app.addomni.com/*"]
  },

  "commands": {
    "OPEN_EXTENSION": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open Omni extension"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "<all_urls>"
  ],

  "content_security_policy": "default-src 'self'; script-src 'self'; ; connect-src wss://api.addomni.com; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
