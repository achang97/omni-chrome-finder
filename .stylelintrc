{
  "extends": ["stylelint-prettier/recommended", "stylelint-config-standard"],
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": true,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind"]
      }
    ],
    "max-nesting-depth": 2,
    "no-descending-specificity": [
      true,
      { ignore: ["selectors-within-list"] }
    ]
  }
}