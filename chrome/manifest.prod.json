{
  "version": "1.1.4",
  "name": "Omni",
  "manifest_version": 2,
  "description": "A lightweight Q&A tool that helps you document and find information faster.",
  "browser_action": {},
  "web_accessible_resources": ["js/*"],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "commands": {
    "OPEN_EXTENSION": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open Omni extension"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "https://app.addomni.com/*",
    "https://mail.google.com/*",
    "https://docs.google.com/*"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self'; ; connect-src wss://api.addomni.com; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
